{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "types": ["@testing-library/jest-dom"],

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    "baseUrl": ".", 
    "paths": {
      "@/*": ["src/*"],
      "@backend/*": ["backend/*"]
    },

    "typeRoots": ["./src/types", "./node_modules/@types"],
    "allowJs": false,
    "checkJs": false,
    "noEmit": true
  },
  "include": ["src", "backend", "tests", "src/types"],
  "exclude": [
    "node_modules",
    "dist",
    "dist-backend",
    "build",
    "coverage",
    "playwright-report",
    ".playwright",
    ".vite",
    ".cypress",
    ".venv",
    "_archive"
  ]
}
